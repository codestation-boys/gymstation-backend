{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@accounts/*": ["modules/accounts/*"],
      "@statistics/*": ["modules/statistics/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@appTypes/*": ["@types/appTypes/*"]
    }
  }
}
